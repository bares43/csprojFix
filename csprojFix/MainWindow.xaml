<Window x:Class="csprojFix.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:csprojFix"
        mc:Ignorable="d"
        Title="CsprojFix" Height="500" Width="580" MinHeight="500" MinWidth="580" >
    <Grid Margin="10,10,10,10">
        <TextBox x:Name="errors" Margin="0,80,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" IsReadOnly="True" VerticalScrollBarVisibility="Visible" />
        <Label x:Name="path" Content="" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="350"/>
        <Button x:Name="load" Content="Browse" HorizontalAlignment="Left" Margin="0,40,0,0" VerticalAlignment="Top" Width="75" Click="load_Click"/>
        <CheckBox x:Name="duplicated" Content="Duplicated files" HorizontalAlignment="Left" Margin="400,0,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <CheckBox x:Name="missingOnDisk" Content="Missing files on disk" HorizontalAlignment="Left" Margin="400,20,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <Button x:Name="find" Content="Find errors" HorizontalAlignment="Left" Margin="400,40,0,0" VerticalAlignment="Top" Width="75" Click="find_Click"/>

    </Grid>
</Window>
